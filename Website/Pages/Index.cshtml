@page
@using CowboyCafe.Data
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
    //throw new Exception("Testing...");
}
    <form method="post">
        <h1>Welcome to Cowboy Cafe</h1>
        <div id="search">
            <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
            <input type="submit" value="Search">
        </div>

        <div id="filters">



            <h4>Categories</h4>
            @foreach (string order in Menu.Categories)
            {
                <label>
                    <input type="checkbox" name="Category" value="@order" />
                    @order
                </label>
            }

            <h4>Price</h4>
            <div>
                Between
                <input name="PriceMin" type="number" min="0" max="1000" step="0.01" placeholder="min" />
                and
                <input name="PriceMax" type="number" min="0" max="1000" step="0.01" placeholder="max" />
            </div>
            <h4>Calories</h4>
            <div>
                Between
                <input name="CaloriesMin" type="number" min="0" max="30000" step="1.0" placeholder="min" />
                and
                <input name="CaloriesMax" type="number" min="0" max="30000" step="1.0" placeholder="max" />
            </div>




        </div>
        <p>
            We at Cowboy Cafe are proud to bring you authentic trail meals from the American West.
            Shake off the dust on your boots and sake your thirst with one of our old-fashioned hand-jerked sodas.
            Dip your Pan de Campo into a bowl of beans.
            Or conquer the the mighty Texas Triple Burger!
            You’ve had a hard ride - so take it easy with us.
        </p>

        
      

        <h2>Entrees</h2>


        @foreach (IOrderItems items in Model.ItemsEntrees)
        {
            <div class="menu-item">
                <p>
                    @items.ToString()
                    <br />
                    $@items.Price.ToString()
                    <br />
                    Calories: @items.Calories.ToString()
                </p>
            </div>
        }
        <div class="sides">
            <h2>Sides</h2>

            @foreach (CowboyCafe.Data.Side items in Model.ItemsSides)
            {
                @foreach (CowboyCafe.Data.Size size in Enum.GetValues(typeof(CowboyCafe.Data.Size)))
                {
                    CowboyCafe.Data.Menu.SideSize(items, size);
                    <div class="menu-item">
                        <p>
                            @items.ToString()
                            <br />
                            $@items.Price.ToString()
                            <br />
                            Calories: @items.Calories.ToString()
                            <br />

                        </p>
                    </div>


                }

            }
        </div>

        <div class="drinks">
            <h2>Drinks</h2>

            @foreach (CowboyCafe.Data.Drink items in Model.ItemsDrinks)
            {
                @foreach (CowboyCafe.Data.Size size in Enum.GetValues(typeof(CowboyCafe.Data.Size)))
                {
                    CowboyCafe.Data.Menu.DrinkSize(items, size);
                    <div class="menu-item">
                        <p>
                            @items.ToString()
                            <br />
                            $@items.Price.ToString()
                            <br />
                            Calories: @items.Calories.ToString()
                            <br />

                        </p>
                    </div>


                }

            }

        </div>

    </form>
    
